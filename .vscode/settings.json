{
    /** Easy Sass 插件 **/
    "easysass.formats": [
      {//nested：嵌套缩进的 css 代码。//expanded：没有缩进的、扩展的css代码。//compact：简洁格式的 css 代码。//compressed：压缩后的 css 代码
        "format": "nested", // 压缩
        "extension": ".css"
      }
    ],
    "easysass.targetDir": "css/", // 自定义css输出文件路径

    "liveSassCompile.settings.formats":[
        // 扩展
        {
            "format": "compact",//可定制的出口CSS样式（expanded，compact，compressed，nested）
            "extensionName": ".css",//编译后缀名
            "savePath": "/src/css"//编译保存的路径
        } 
        
    ],

    "liveSassCompile.settings.excludeList": [
        "**/node_modules/**",
        ".vscode/**"
     ],
}